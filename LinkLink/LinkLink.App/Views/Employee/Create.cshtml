@model EmoloyeeCreateBindingModel
@{
    ViewBag.Title = "Create Employee";
}
<div class="row mt-2">
    <br />
    <div class="col-md-4 offset-md-4 text-center">
        <h1>Create Employee</h1>
        <form method="Post" asp-action="Create" asp-controller="Employee">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" value="" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationDays"></label>
                <input asp-for="VacationDays" class="form-control" value="" />
                <span asp-validation-for="VacationDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperienceLevel"></label>
                <select asp-for="ExperienceLevel" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<ExperienceLevel>()">
                    <option value="">Please select</option>
                </select>
                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate"></label>
                <input id="datepicker" asp-for="StartingDate" class="form-control" value="" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn-lg btn-primary">Create Employee</button>
            <br />
        </form>
        <div class="card">
            <div class="card-header">
                <h3>Employee Offices</h3>
            </div>
            <div class="card-body">
                @if (Model.EmployeesOffices.Any())
                {
                    foreach (var office in Model.EmployeesOffices)
                    {
                        <h5 class="card-title">@office</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>