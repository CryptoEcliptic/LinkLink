@model EmployeeEditBindingModel
@{
    ViewBag.Title = "Create Employee";
}
<div class="row mt-2">
    <br />
    <div class="col-md-4 offset-md-4 text-center">
        <h1>Edit Employee</h1>
        <form method="Post" asp-action="Edit" asp-controller="Employee">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationDays"></label>
                <input asp-for="VacationDays" class="form-control" />
                <span asp-validation-for="VacationDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperienceLevel"></label>
                <select asp-for="ExperienceLevel" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<ExperienceLevel>()">
                    <option value="">Please select</option>
                </select>
                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate"></label>
                <input id="datepicker" asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-primary">Cancel</a>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-header">
                    <h3>Employee Officess</h3>
                </div>
                <div class="card-body">
                    @if (Model.EmployeesOffices.Any())
                    {
                        foreach (var office in Model.EmployeesOffices)
                        {
                            <div class="row">
                                <h5 class="card-title">@office.City</h5>
                                <h5 class="card-title">@office.Street</h5>
                                <h5 class="card-title">@office.StreetNumber</h5>
                            </div>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">No officess selected for this employee!</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="ManageOfficess" asp-controller="Office" asp-route-userId="@Model.Id"
                       class="btn btn-primary">
                        Add employee to office
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>